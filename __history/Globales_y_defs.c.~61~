   float          Setpoint;//-> Temperatura deseada
   unsigned int32 cont;    //-> Numero de veces que saturo el timer1
//COMODIDAD
   #define ON output_high
   #define OFF output_low
   #define FLT output_float 
//LCD
   #define LCD_ENABLE_PIN  PIN_A5
   #define LCD_RS_PIN      PIN_A1
   #define LCD_RW_PIN      PIN_A4
   
   #define LCD_DATA4       PIN_A6  
   #define LCD_DATA5       PIN_C0
   #define LCD_DATA6       PIN_C1 
   #define LCD_DATA7       PIN_C2
   
   //Simbolos especiales
      //simbolo de grados y signo de pregunta inicial
      int cir[8]={0x02,0x05,0x02,0x00,0x00,0x00,0x00,0x00};
