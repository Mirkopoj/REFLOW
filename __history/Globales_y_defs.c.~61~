struct Punto{
   unsigned int Temperatura;
   unsigned long Tiempo;
};
register int config=~read_eeprom(0x00);
//TECLADO
   //Filas
   #define F0 PIN_B4
   #define F1 PIN_B5
   #define F2 PIN_B6
   #define F3 PIN_B7
   //Columnas
   #define C0 PIN_B0
   #define C1 PIN_B1
   #define C2 PIN_B2
   //Modos
   #define Escaneo 1
   #define Estatico 0
