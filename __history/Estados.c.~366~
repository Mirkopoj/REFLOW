#ifndef _ESTADOS
#define _ESTADOS
#include "Prototipos.c"
#include "Auxiliares_Estados.c"
//Funciones de estado
int SeleccionDePerfil(){
   Cursor(2,3);
   while(1){
      if(ultimaTecla==_X){
         ultimaTecla=_VISTO;
         return _CargarValores;
      }
      if(ultimaTecla==_TICK){
         ultimaTecla=_VISTO;
         return _Perfiles;
          
      }
   }
}
int Perfiles(int *nPuntos,struct Punto *Curva){
   int nPerfil=(config&0xE0)>>5;
   if(nPerfil==0)nPerfil=1;
   printPerfiles();
   Cursor(3*(nPerfil-1)+1,1);
   GrafFrame();
   printVacio();
   GrafPerfil(nPuntos, Curva, nPerfil);
   while(1){
      if(ultimaTecla==_X){
         ultimaTecla=_VISTO;
         if(nPerfil>5) nPerfil = 1;
         else nPerfil++;
         Cursor(3*(nPerfil-1)+1,1);
         GrafPerfil(nPuntos, Curva, nPerfil);
      }
      if(ultimaTecla==_TICK){
         ultimaTecla=_VISTO;
         if(nPerfil>5){
            fillRect(_width-9,_height-14,2,5,BG_COLOR);
            printMenuPrincipal();
            return _SeleccionDePerfil;
         }
         config=(config&0x1F)|(nPerfil<<5);
         tft_gotoxy(0,0);
         printf(tft_putc,"PERFIL %d:\n",nPerfil);
         if(perfilVacio(nPerfil)){
            printf(tft_putc," >CREAR");
            fillRect(X,Y-8,_width-X,8,BG_COLOR);
            *nPuntos=1;
            return _Perfil_Crear;
         }else{
            printf(tft_putc,"  CARGAR  EDITAR  VOLVER ");
            return _Perfil_Cargar;
         }
      }
   } 
}
   int Perfil_Crear(){
      while(1){
         if(ultimaTecla==_X){
            ultimaTecla=_VISTO;
            return _Perfiles;
         }
         if(ultimaTecla==_TICK){
            ultimaTecla=_VISTO;
            return _CargarPunto;
         }
      }
   }
   int Perfil_Cargar(){
      Cursor(1,1);
      while(1){
         if(ultimaTecla==_X){
            ultimaTecla=_VISTO;
            return _Perfil_Editar;  
         }
         if(ultimaTecla==_TICK){
            ultimaTecla=_VISTO;
            return _Iniciar;  
         }
      }
   }
   int Perfil_Editar(){
      Cursor(9,1);
      while(1){
         if(ultimaTecla==_X){
            ultimaTecla=_VISTO;
            return _Perfil_Volver;
             
         }
         if(ultimaTecla==_TICK){
            ultimaTecla=_VISTO;
            return _CargarPunto;
         }
      }
   }
   int Perfil_Volver(){
      Cursor(17,1);
      while(1){
         if(ultimaTecla==_X){
            ultimaTecla=_VISTO;
            return _Perfil_Cargar;
         }
         if(ultimaTecla==_TICK){
            ultimaTecla=_VISTO;
            return _Perfiles;
             
         }
      }
   }
int CargarValores(int *nPuntos){
   Cursor(2,5);
   *nPuntos=1;
   while(1){
      if(ultimaTecla==_X){
         ultimaTecla=_VISTO;
         return _Configuracion;
      }
      if(ultimaTecla==_TICK){
         ultimaTecla=_VISTO;
         config=(config&0x1F);
         printf(tft_putc,"\fCARGAR VALORES:");
         GrafFrame();
         return _CargarPunto;
          
      }
   } 
}
int Configuracion(){
   Cursor(2,7);
   while(1){
      if(ultimaTecla==_X){
         ultimaTecla=_VISTO;
         config=(config&0x1F)|(1<<5);  //Ultimo perfil = 001
         return _SeleccionDePerfil;
          
      }
      if(ultimaTecla==_TICK){
         ultimaTecla=_VISTO;
         printConfiguracion();
         return _Config_Tiempo;
          
      }
   }
}
   int Config_Tiempo(){
      Cursor(2,3);
      while(1){
         if(ultimaTecla==_X){
            ultimaTecla=_VISTO;
            return _Config_Temp;
             
         }
         if(ultimaTecla==_TICK){
            ultimaTecla=_VISTO;
            printTiempo();
            return _Config_Tiempo_Formato;
             
         }
      }
   }
      int Config_Tiempo_Formato(){
         Cursor(5,5);
         while(1){
            if(ultimaTecla==_X){
               ultimaTecla=_VISTO;
               return _Config_Tiempo_Origen;
                
            }
            if(ultimaTecla==_TICK){
               ultimaTecla=_VISTO;
               printFormato();
               return _Config_Tiempo_Formato_ssss;
                
            }
         }
      }
         int Config_Tiempo_Formato_ssss(){
            Cursor(8,7);
            while(1){
               if(ultimaTecla==_X){
                  ultimaTecla=_VISTO;
                  return _Config_Tiempo_Formato_mmss;
                   
               }
               if(ultimaTecla==_TICK){
                  ultimaTecla=_VISTO;
                  write_eeprom(0x00,~(((~read_eeprom(0x00))&(~16))|0));
                  config=~read_eeprom(0x00);
                  return _Config_Tiempo_Formato_Volver;
                   
               }
            }
         }
         int Config_Tiempo_Formato_mmss(){
           Cursor(8,9);
            while(1){
               if(ultimaTecla==_X){
