#ifndef _GLOBS_DEFS
#define _GLOBS_DEFS
struct Punto{
   unsigned int Temperatura;
   unsigned long Tiempo;
};
register int config=~read_eeprom(0x00);
//                         CONFIGURATION WORD
// _________________________________________________________________
// | Bit 7 | Bit 6 | Bit 5 | Bit 4 | Bit 3 | Bit 2 | Bit 1 | Bit 0 |
// |_____Ultimo perfil_____|____Tiempo_____|_°C/°F_|____Idioma_____|

//TECLADO
   //Filas
   #define F0 PIN_B4
   #define F1 PIN_B5
   #define F2 PIN_B6
   #define F3 PIN_B7
   //Columnas
   #define C0 PIN_C0
   #define C1 PIN_C1
   #define C2 PIN_C2
   //Modos
   #define Escaneo 1
   #define Estatico 0
   //Teclas
   enum{_X=10,_TICK,_VISTO};
   int ultimaTecla;
//HORNO
   #define port_adc sAN0
   #define SALIDA PIN_A6
   //Variacion de histeresis
   #define _H 2 
   //Constantes de calibracion
   #define ESCALADO 0.30583152697
   #define OFFSET 0
   //Temperatura Minima
   #define MINTEMP 32
   //Chip select sensor de temperatura
   #define CS2 PIN_A4
   //Variables
   float          dt;      //-> Diferencial de temperatura: Diferencia de temperatura entre la medida al inicio de la etapa y la deseada al final de la etapa, sobre el Num de saturaciones del timer1 hasta la proxima seccion de la curva
   float          Setpoint;//-> Temperatura deseada
   unsigned int32 cont;    //-> Numero de veces que saturo el timer1
//COMODIDAD
   #define ON output_high
   #define OFF output_low
   #define FLT output_float 
//LCD
   #define TFT_DC    PIN_C6   // data/command pin
   #define TFT_CS    PIN_A5   // chip select pin, use it if the display has CS pin
   #define TFT_RST   PIN_D3   // display reset pin

   
   int letra[65][5] = {
      {0x00, 0x00, 0x00, 0x00, 0x00}, // Espacio
      {0x00, 0x02, 0x05, 0x02, 0x00}, // ! -> °
      {0x3E, 0x41, 0xC1, 0x41, 0x22}, // " -> Ç
      {0x7C, 0x55, 0x56, 0x54, 0x54}, // # -> È (É con el tilde a la izq `)
      {0x7C, 0x54, 0x56, 0x55, 0x54}, // $ -> É
      {0x30, 0x48, 0x45, 0x40, 0x20}, // % -> ¿ (? invertido)
      {0x20, 0x41, 0x3F, 0x01, 0x7F}, // & -> Ë (Lambda ruso)
      {0x7F, 0x49, 0x49, 0x49, 0x73}, // ' -> Á (B ruso)
      {0x7F, 0x40, 0x7F, 0x40, 0xFF}, // ( -> Ù (Sh rusa)
      {0x7F, 0x01, 0x01, 0x01, 0x03}, // ) -> Ã (Gama ruso)
      {0x70, 0x29, 0x27, 0x21, 0x7f}, // * -> Ä (Delta ruso)
      {0x7F, 0x48, 0x30, 0x00, 0x7F}, // + -> Û (Bi ruso)
      {0x00, 0x50, 0x30, 0x00, 0x00}, // ,
      {0x7F, 0x48, 0x48, 0x48, 0x38}, // - -> Ü (Mini b rusa)
      {0x00, 0x30, 0x30, 0x00, 0x00}, // .
      {0x7F, 0x08, 0x3E, 0x41, 0x3E}, // / -> Þ (Iu ruso)
      {0x3E, 0x51, 0x49, 0x45, 0x3E}, // 0
      {0x00, 0x42, 0x7F, 0x40, 0x00}, // 1
      {0x42, 0x61, 0x51, 0x49, 0x46}, // 2
      {0x21, 0x41, 0x45, 0x4B, 0x31}, // 3
      {0x18, 0x14, 0x12, 0x7F, 0x10}, // 4
      {0x27, 0x45, 0x45, 0x45, 0x39}, // 5
      {0x3C, 0x4A, 0x49, 0x49, 0x30}, // 6
      {0x01, 0x71, 0x09, 0x05, 0x03}, // 7
      {0x36, 0x49, 0x49, 0x49, 0x36}, // 8
      {0x06, 0x49, 0x49, 0x29, 0x1E}, // 9
      {0x00, 0x36, 0x36, 0x00, 0x00}, // :
      {0x7F, 0x01, 0x01, 0x01, 0x7F}, // ; -> Ï (Pi ruso)
      {0x38, 0x44, 0x46, 0x45, 0x38}, // < -> Ó
      {0x7D, 0x0A, 0x12, 0x21, 0x7D}, // = -> Ñ (Eñe ~ + N)
      {0x00, 0x41, 0x22, 0x14, 0x08}, // >
      {0x02, 0x01, 0x51, 0x09, 0x06}, // ?
      {0x46, 0x29, 0x19, 0x09, 0x7F}, // @ -> ß (Ia ruso)
      {0x7E, 0x11, 0x11, 0x11, 0x7E}, // A
      {0x7F, 0x49, 0x49, 0x49, 0x36}, // B
      {0x3E, 0x41, 0x41, 0x41, 0x22}, // C
      {0x7F, 0x41, 0x41, 0x41, 0x3E}, // D
      {0x7F, 0x49, 0x49, 0x49, 0X41}, // E
      {0x7F, 0x09, 0x09, 0x09, 0x01}, // F
      {0x3E, 0x41, 0x49, 0x49, 0x7A}, // G
      {0x7F, 0x08, 0x08, 0x08, 0x7F}, // H
      {0x00, 0x41, 0x7F, 0x41, 0x00}, // I
      {0x20, 0x40, 0x41, 0x3F, 0x01}, // J
      {0x7F, 0x08, 0x14, 0x22, 0x41}, // K
      {0x7F, 0x40, 0x40, 0x40, 0x40}, // L
      {0x7F, 0x02, 0x04, 0x02, 0x7F}, // M
      {0x7F, 0x04, 0x08, 0x10, 0x7F}, // N
      {0x3E, 0x41, 0x41, 0x41, 0x3E}, // O
      {0x7F, 0x09, 0x09, 0x09, 0x06}, // P
      {0x3E, 0x41, 0x51, 0x21, 0x5E}, // Q
      {0x7F, 0x09, 0x19, 0x29, 0x46}, // R
      {0x46, 0x49, 0x49, 0x49, 0x31}, // S
      {0x01, 0x01, 0x7F, 0x01, 0x01}, // T
      {0x3F, 0x40, 0x40, 0x40, 0x3F}, // U
      {0x1F, 0x20, 0x40, 0x20, 0x1F}, // V
      {0x3F, 0x40, 0x38, 0x40, 0x3F}, // W
      {0x63, 0x14, 0x08, 0x14, 0x63}, // X
      {0x07, 0x08, 0x70, 0x08, 0x07}, // Y
      {0x61, 0x51, 0x49, 0x45, 0x43}, // Z
      {0x41, 0x49, 0x49, 0x49, 0x36}, // [ -> Ç (Zeta ruso)
      {0x7F, 0x10, 0x08, 0x04, 0x7F}, // \ -> È (I ruso)
      {0x7C, 0x21, 0x12, 0x09, 0x7C}, // ] -> É (Ij ruso)
      {0x1C, 0x22, 0x7F, 0x22, 0x1C}, // ^ -> Ô (Fi ruso)
      {0x40, 0x40, 0x40, 0x40, 0x40}, // _ 
      {0x07, 0x08, 0x08, 0x08, 0x7F}  // ` -> × (Ch ruso)
   };
#endif
